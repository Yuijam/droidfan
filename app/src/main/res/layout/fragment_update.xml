<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        >
        <AutoCompleteTextView
            android:id="@+id/et_status_text"
            android:gravity="top"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/text_primary"
            android:background="@null"
            android:hint="@string/hint_white_something"
            />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/topic"
            android:layout_width="0dp"
            android:layout_height="@dimen/update_iv_size"
            android:layout_weight="1"
            android:src="@drawable/ic_topic_48dp"
            />

        <ImageView
            android:id="@+id/draft"
            android:layout_width="0dp"
            android:layout_height="@dimen/update_iv_size"
            android:layout_weight="1"
            android:src="@drawable/ic_drafts_white_48dp"
            />

        <ImageView
            android:id="@+id/add_photo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/update_iv_size"
            android:src="@drawable/ic_image_grey600_48dp"
            />

        <ImageView
            android:id="@+id/take_photo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/update_iv_size"
            android:src="@drawable/ic_menu_camera"
            />

        <TextView
            android:id="@+id/text_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/update_iv_size"
            android:gravity="center"
            android:textColor="@color/update_gray"
            android:text="140"
            />

        <Button
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/update_iv_size"
            android:background="@drawable/bg_send_button_invalid"
            android:textColor="@color/white"
            android:text="@string/send"
            />

    </LinearLayout>

</LinearLayout>